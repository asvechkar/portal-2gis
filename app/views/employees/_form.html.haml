= form_for @employee do |f|
  - if @employee.errors.any?
    #error_explanation
      %h2= "#{pluralize(@employee.errors.count, "error")} prohibited this city from being saved:"
      %ul
        - @employee.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    .controls
      = f.text_field :firstname, :class => 'span8', :placeholder => 'Имя'
  .control-group
    .controls
      = f.text_field :middlename, :class => 'span8', :placeholder => 'Отчество'
  .control-group
    .controls
      = f.text_field :lastname, :class => 'span8', :placeholder => 'Фамилия'
  .control-group
    .controls
      = f.text_field :snils, :class => 'span8', :placeholder => 'СНИЛС'
  .control-group
    .controls
      = f.collection_select :position_id, Position.all, :id, :name, {:prompt => 'Выберите должность'}, :class => 'span8'
  - level = (@employee.position.show_experience_level if @employee.position) || 0
  = content_tag :div, id: 'levels' do
    = f.hidden_field false, :value => level, :id => 'level'
  .control-group
    .controls
      = f.collection_select :level_id, Level.all, :id, :name, {:prompt => 'Выберите уровень опыта'}, :class => 'span8'
  .control-group
    Группы:
    .controls
  %hr.separator
    - Group.all.each do |g|
      .check-line
        = check_box_tag "group[group_ids][]", g.id, @employee.group_ids.include?(g.id), id: dom_id(g)
        = label_tag dom_id(g), g.code, :class => 'inline'
    %hr.separator
  .form-actions
    = f.submit 'Сохранить', :class => 'btn btn-icon btn-primary'

