.filter-bar
  %form#factors_search
    - if current_user.is_admin?
      %div
        %label Филиал
        = select_tag 'filter_branch', options_from_collection_for_select(Branch.order(:name), :id, :name, selected: current_employee.branch.id)
    %div
      %label Дата
      = text_field_tag :report_date, Date.today.strftime("%m.%Y")
    %div
      = submit_tag 'Применить'
    .clearfix
