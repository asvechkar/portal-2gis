- flash.each do |name, msg|
  %div{ :class => "alert alert-#{name}" }
    %button.close{'data-dismiss' => 'alert', :type => 'button'} &times;
    = msg
%ul.breadcrumb
  %li Вы сейчас здесь
  %li
    = link_to root_path, :class => 'glyphicons dashboard' do
      %i
      Главная
  %li.divider
  %li= link_to 'Справочник "Группы"', groups_path
  %li.divider
  %li= @group.code
%h3.separator.bottom
  = @group.code
  %span карточка
.widget.widget-heading-simple.widget-body-gray
  .widget-body
    .menubar.links.primary
      %ul
        %li= link_to 'Редактировать', edit_group_path(@group)
    %dl
      %dt Группа
      %dd= @group.code
      %dt Руководитель
      %dd= @group.employee.initials if @group.employee
      %dt Филиал
      %dd= @group.branch.name
      %dt Автор
      %dd= @group.user.username
      %dt Дата создания
      %dd= @group.created_at.strftime('%d.%m.%Y %H:%M')
