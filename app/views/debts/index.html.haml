- flash.each do |name, msg|
  %div{ :class => "alert alert-#{name}" }
    %button.close{'data-dismiss' => 'alert', :type => 'button'} &times;
    = msg
%ul.breadcrumb
  %li Вы сейчас здесь
  %li
    = link_to root_path, :class => 'glyphicons dashboard' do
      %i
      Главная
  %li.divider
  %li Задолженность
.heading-buttons
  %h3
    Задолженность
  .buttons.pull-right
    = link_to debts_floating_path, :class => 'btn btn-primary btn-icon glyphicons circle_plus' do
      %i
      Расчет текущей
  .buttons.pull-right
    = link_to '#', :class => 'btn btn-primary btn-icon glyphicons circle_plus' do
      %i
      Импортировать
  .clearfix
.separator.bottom
.innerLR
  .widget.widget-heading-simple.widget-body-gray
    .widget-body
      .separator.bottom.form-inline.small
        Всего:
        = @debts.count
      %table.table.table-bordered.table-condensed.table-striped.table-primary.table-vertical-center
        %thead
          %tr
            %th.center Год
            %th.center Месяц
            %th.center Менеджер
            %th.center Клиент
            %th.center Бланк заказа
            %th.center Тип
            %th.center Сумма
            %th
        %tbody
          - @debts.each do |debt|
            %tr
              %td.center= debt.year
              %td.center= debt.month
              %td= debt.employee.initials
              %td= debt.client.name
              %td= debt.order.ordernum
              %td= debt.debttype
              %td= number_to_currency(debt.debtsum, unit: 'руб.', separator: ',', delimiter: ' ', format: '%n %u')
              %td.center.actions-bar
                = link_to edit_debt_path(debt), :class => 'btn-action glyphicons pencil btn-success', :title => 'Редактировать' do
                  %i
                = link_to debt, :method => :delete, :data => { :confirm => 'Вы уверены, что хотите удалить?' }, :class => 'btn-action glyphicons remove_2 btn-danger', :title => 'Удалить' do
                  %i
