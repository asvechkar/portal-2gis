= form_for @debt do |f|
  - if @debt.errors.any?
    #error_explanation
      %h2= "#{pluralize(@debt.errors.count, "error")} prohibited this debt from being saved:"
      %ul
        - @debt.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :month
    = f.number_field :month
  .field
    = f.label :employee
    = f.text_field :employee
  .field
    = f.label :client
    = f.text_field :client
  .field
    = f.label :order
    = f.text_field :order
  .field
    = f.label :debtsum
    = f.text_field :debtsum
  .field
    = f.label :debttype
    = f.number_field :debttype
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
