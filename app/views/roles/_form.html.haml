= form_for @role do |f|
  - if @role.errors.any?
    #error_explanation
      %h2= "#{pluralize(@role.errors.count, "error")} prohibited this city from being saved:"
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :name, 'Наименование роли', :class => 'control-label'
    .controls
      = f.text_field :name, :placeholder => 'На английском языке'
  .control-group
    = f.label :name, 'Описание роли', :class => 'control-label'
    .controls
      = f.text_field :description, :placeholder => 'На русском языке'
  %hr.separator
  .form-actions
    = f.submit 'Сохранить', :class => 'btn btn-icon btn-primary'
