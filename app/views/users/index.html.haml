- flash.each do |name, msg|
  %div{ :class => "alert alert-#{name}" }
    %button.close{'data-dismiss' => 'alert', :type => 'button'} &times;
    = msg
%ul.breadcrumb
  %li Вы сейчас здесь
  %li
    = link_to root_path, :class => 'glyphicons dashboard' do
      %i
      Главная
  %li.divider
  %li Справочник "Пользователи"
.heading-buttons
  %h3
    Пользователи
    %span Справочник
  .clearfix
.separator.bottom
.innerLR
  .widget.widget-heading-simple.widget-body-gray
    .widget-body
      .separator.bottom.form-inline.small
        Всего:
        = @users.count
      %table.table.table-bordered.table-condensed.table-striped.table-primary.table-vertical-center
        %thead
          %tr
            %th.center Имя пользователя
            %th.center Эл.почта
            %th.center Роль
            %th.center Зарегистрирован
            %th
        %tbody
          - @users.each do |user|
            %tr
              %td= user.username
              %td= user.email
              %td= user.roles.first.name if !user.roles.empty?
              %td= user.created_at.strftime('%d.%m.%Y %H:%M')
              %td.center
                = link_to '#', :class => 'btn-action glyphicons eye_open btn-default', :title => 'Показать' do
                  %i
                = link_to edit_user_path(user), :class => 'btn-action glyphicons pencil btn-success', :title => 'Редактировать' do
                  %i
                = link_to '#', :class => 'btn-action glyphicons remove_2 btn-danger', :title => 'Заблокировать' do
                  %i
