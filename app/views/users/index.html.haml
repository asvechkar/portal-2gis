- flash.each do |name, msg|
  %div{ :class => "alert alert-#{name}" }
    %button.close{'data-dismiss' => 'alert', :type => 'button'} &times;
    = msg
%ul.breadcrumb
  %li Вы сейчас здесь
  %li
    = link_to root_path, :class => 'glyphicons dashboard' do
      %i
      Главная
  %li.divider
  %li Справочник "Пользователи"
%h3.separator.bottom
  Пользователи
  %span Справочник

.widget.widget-heading-simple.widget-body-gray
  .widget-body
    .menubar.links.primary
      %ul
        %li= link_to 'Новый пользователь', new_user_path
    %table.table.table-bordered.table-condensed.table-striped.table-white
      %thead
        %tr
          %th.center Имя пользователя
          %th.center Эл.почта
          %th.center Зарегистрирован
          %th
      %tbody
        - @users.each do |user|
          %tr
            %td= user.username
            %td= user.email
            %td= user.created_at.strftime('%d.%m.%Y %H:%M')
            %td
              = link_to user, :class => 'btn btn-primary', :title => 'Показать' do
                %i.icon-search
              = link_to edit_user_path(user), :class => 'btn btn-primary', :title => 'Редактировать' do
                %i.icon-edit
              = link_to user, :method => :delete, :data => { :confirm => 'Вы уверены, что хотите удалить?' }, :class => 'btn btn-danger', :title => 'Удалить' do
                %i.icon-trash
