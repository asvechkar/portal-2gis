- flash.each do |name, msg|
  %div{ :class => "alert alert-#{name}" }
    %button.close{'data-dismiss' => 'alert', :type => 'button'} &times;
    = msg
%ul.breadcrumb
  %li Вы сейчас здесь
  %li
    = link_to root_path, :class => 'glyphicons dashboard' do
      %i
      Главная
  %li.divider
  %li Справочник "Уровни опыта"
%h3.separator.bottom
  Уровни опыта
  %span Справочник

.widget.widget-heading-simple.widget-body-gray
  .widget-body
    .menubar.links.primary
      %ul
        %li= link_to 'Новый уровень', new_level_path
    %table.table.table-bordered.table-condensed.table-striped.table-white
      %thead
        %tr
          %th.center Уровень
          %th.center Пользователь
          %th.center Создан
          %th
      %tbody
        - @levels.each do |level|
          %tr
            %td= level.name
            %td= level.user.username if level.user
            %td= level.created_at.strftime('%d.%m.%Y %H:%M')
            %td
              = link_to level, :class => 'btn btn-primary', :title => 'Показать' do
                %i.icon-search
              = link_to edit_level_path(level), :class => 'btn btn-primary', :title => 'Редактировать' do
                %i.icon-edit
              = link_to level, :method => :delete, :data => { :confirm => 'Вы уверены, что хотите удалить?' }, :class => 'btn btn-danger', :title => 'Удалить' do
                %i.icon-trash
