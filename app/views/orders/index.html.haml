- flash.each do |name, msg|
  %div{ :class => "alert alert-#{name}" }
    %button.close{'data-dismiss' => 'alert', :type => 'button'} &times;
    = msg
%ul.breadcrumb
  %li Вы сейчас здесь
  %li
    = link_to root_path, :class => 'glyphicons dashboard' do
      %i
      Главная
  %li.divider
  %li Бланки заказов
.heading-buttons
  %h3
    Бланки заказов
  .buttons.pull-right
    = link_to new_order_path, :class => 'btn btn-primary btn-icon glyphicons circle_plus' do
      %i
      Новый бланк заказа
  .clearfix
.separator.bottom
.innerLR
  .widget.widget-heading-simple.widget-body-gray
    .widget-body
      .separator.bottom.form-inline.small
        Всего:
        = @orders.count
      %table.table.table-bordered.table-condensed.table-striped.table-primary.table-vertical-center
        %thead
          %tr
            %th.center №
            %th.center Куратор
            %th.center Клиент
            %th.center Начало
            %th.center Окончание
            %th.center Сумма
            %th.center Статус
            %th.center Продление
            %th.center Автор
            %th.center Создан
            %th
        %tbody
          - @orders.each do |order|
            %tr
              %td= order.ordernum
              %td= order.employee.initials
              %td= order.client.name
              %td= order.startdate.strftime('%d.%m.%Y')
              %td= order.finishdate.strftime('%d.%m.%Y')
              %td= number_to_currency(order.ordersum, unit: 'руб.', separator: ',', delimiter: ' ', format: '%n %u')
              %td= order.status_desc
              %td= order.continue_desc
              %td= order.user.username if order.user
              %td= order.created_at.strftime('%d.%m.%Y %H:%M')
              %td.center
                = link_to order, :class => 'btn-action glyphicons eye_open btn-default', :title => 'Показать' do
                  %i
                = link_to edit_order_path(order), :class => 'btn-action glyphicons pencil btn-success', :title => 'Редактировать' do
                  %i
                = link_to order, :method => :delete, :data => { :confirm => 'Вы уверены, что хотите удалить?' }, :class => 'btn-action glyphicons remove_2 btn-danger', :title => 'Удалить' do
                  %i
