.filter-bar
  %form#incomes_search
    %div
      %label Филиалы:
      = select_tag 'branch', options_from_collection_for_select(Branch.order(:name), :id, :name, selected: current_employee.branch.id)
    %div
      %label Менеджеры:
      = select_tag 'manager', options_from_collection_for_select(current_employee.branch.employees.order(:lastname), :id, :initials), prompt: 'Выберите менеджера'
    %div
      = submit_tag 'Применить'
    .clearfix
