- flash.each do |name, msg|
  %div{ :class => "alert alert-#{name}" }
    %button.close{'data-dismiss' => 'alert', :type => 'button'} &times;
    = msg
%ul.breadcrumb
  %li Вы сейчас здесь
  %li
    = link_to root_path, :class => 'glyphicons dashboard' do
      %i
      Главная
  %li.divider
  %li Справочник "Филиалы"
%h3.separator.bottom
  Филиалы
  %span Справочник

.widget.widget-heading-simple.widget-body-gray
  .widget-body
    .menubar.links.primary
      %ul
        %li= link_to 'Новый филиал', new_branch_path
    %table.table.table-bordered.table-condensed.table-striped.table-white
      %thead
        %tr
          %th.center Наименование
          %th.center Руководитель
          %th.center Город
          %th.center Автор
          %th.center Создан
          %th
      %tbody
        - @branches.each do |branch|
          %tr
            %td= branch.name
            %td= branch.employee.initials
            %td= branch.city.name
            %td= branch.user.username
            %td= branch.created_at.strftime('%d.%m.%Y %H:%M')
            %td
              = link_to branch, :class => 'btn btn-primary', :title => 'Показать' do
                %i.icon-search
              = link_to edit_branch_path(branch), :class => 'btn btn-primary', :title => 'Редактировать' do
                %i.icon-edit
              = link_to branch, :method => :delete, :data => { :confirm => 'Вы уверены, что хотите удалить?' }, :class => 'btn btn-danger', :title => 'Удалить' do
                %i.icon-trash
