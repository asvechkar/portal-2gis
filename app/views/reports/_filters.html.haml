.filter-bar
  = form_tag (reports_recalc_planfact_path), id: 'planfact_params' do
    - if current_user.is_admin?
      %div
        %label Филиалы
        = select_tag :branches_list, options_from_collection_for_select(Branch.order(:name), :id, :name, selected: params[:id]), prompt: 'Выберите филиал'
    %div
      %label Дата
      = text_field_tag :report_date, (params[:report_date] || Date.today.strftime("%m.%Y")), required: 'required'
    %div
      = hidden_field_tag 'update_planfact', '0'
      = submit_tag "Применить"
    .clearfix
