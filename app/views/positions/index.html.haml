- flash.each do |name, msg|
  %div{ :class => "alert alert-#{name}" }
    %button.close{'data-dismiss' => 'alert', :type => 'button'} &times;
    = msg
%ul.breadcrumb
  %li Вы сейчас здесь
  %li
    = link_to root_path, :class => 'glyphicons dashboard' do
      %i
      Главная
  %li.divider
  %li Справочник "Должности"
.heading-buttons
  %h3
    Должности
    %span Справочник
  .buttons.pull-right
    = link_to new_position_path, :class => 'btn btn-primary btn-icon glyphicons circle_plus' do
      %i
      Новая должность
  .clearfix
.separator.bottom
.innerLR
  .widget.widget-heading-simple.widget-body-gray
    .widget-body
      .separator.bottom.form-inline.small
        Всего:
        = @positions.count
      %table.table.table-bordered.table-condensed.table-striped.table-primary.table-vertical-center
        %thead
          %tr
            %th.center Наименование
            %th.center Уровень опыта
            %th
        %tbody
          - @positions.each do |position|
            %tr
              %td= position.name
              %td= position.show_experience_level > 0 ? 'да' : 'нет' if position.show_experience_level
              %td.center.actions-bar
                = link_to position, :class => 'btn-action glyphicons eye_open btn-default', :title => 'Показать' do
                  %i
                = link_to edit_position_path(position), :class => 'btn-action glyphicons pencil btn-success', :title => 'Редактировать' do
                  %i
                = link_to position, :method => :delete, :data => { :confirm => 'Вы уверены, что хотите удалить?' }, :class => 'btn-action glyphicons remove_2 btn-danger', :title => 'Удалить' do
                  %i
