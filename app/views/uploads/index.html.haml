- flash.each do |name, msg|
  %div{ :class => "alert alert-#{name}" }
    %button.close{'data-dismiss' => 'alert', :type => 'button'} &times;
    = msg
%ul.breadcrumb
  %li Вы сейчас здесь
  %li
    = link_to root_path, :class => 'glyphicons dashboard' do
      %i
      Главная
  %li.divider
  %li Загруженные файлы
.heading-buttons
  %h3
    Загруженные файлы
  .buttons.pull-right
    .container
      = form_for Upload.new, :html => { :multipart => true, :id => "fileupload"  } do |f|
        .row.fileupload-buttonbar
          .span7
            %span.btn.btn-success.fileinput-button
              %i.icon-plus.icon-white
              %span Добавить файлы...
              = f.file_field :upload
            %button.btn.btn-primary.start{:type => "submit"}
              %i.icon-upload.icon-white
              %span Начать загрузку
            %button.btn.btn-warning.cancel{:type => "reset"}
              %i.icon-ban-circle.icon-white
              %span Отменить загрузку
            %button.btn.btn-danger.delete{:type => "button"}
              %i.icon-trash.icon-white
              %span Удалить
            %input.toggle{:type => "checkbox"}
          .span5
            .progress.progress-success.progress-striped.active.fade
              .bar{:style => "width:0%;"}
        .fileupload-loading
        %br
          %table.table.table-striped
            %tbody.files{"data-target" => "#modal-gallery", "data-toggle" => "modal-gallery"}
  .clearfix
.separator.bottom
.innerLR
  .widget.widget-heading-simple.widget-body-gray
    .widget-body
      .separator.bottom.form-inline.small
        Всего:
        = @uploads.count
      %table.table.table-bordered.table-condensed.table-striped.table-primary.table-vertical-center
        %thead
          %tr
            %th.center Наименование
            %th.center Размер
            %th.center Автор
            %th.center Загружен
            %th
        %tbody
          - @uploads.each do |upload|
            %tr
              %td= upload.upload_file_name
              %td= upload.upload_file_size
              %td= upload.user.username if upload.user
              %td= upload.created_at.strftime('%d.%m.%Y %H:%M')
              %td.center
                = link_to upload, :class => 'btn-action glyphicons eye_open btn-default', :title => 'Показать' do
                  %i
                = link_to upload, :method => :delete, :data => { :confirm => 'Вы уверены, что хотите удалить?' }, :class => 'btn-action glyphicons remove_2 btn-danger', :title => 'Удалить' do
                  %i
= render 'shared/jsup'