- flash.each do |name, msg|
  %div{ :class => "alert alert-#{name}" }
    %button.close{'data-dismiss' => 'alert', :type => 'button'} &times;
    = msg
%ul.breadcrumb
  %li Вы сейчас здесь
  %li
    = link_to root_path, :class => 'glyphicons dashboard' do
      %i
      Главная
  %li.divider
  %li= link_to 'Журнал событий', eventlogs_path
  %li.divider
  %li
    Событие №
    = @eventlog.id
%h3.separator.bottom
  Событие №
  = @eventlog.id
  %span{ :class => "label label-#{@eventlog.status == 0 ? 'success' : 'important'}" }
    = @eventlog.status == 0 ? 'Успешно' : 'Ошибка'
.widget
  .widget-head
    %h4.heading-arrow
      = @eventlog.created_at.strftime('%d.%m.%Y %H:%M')
      \:
      = @eventlog.user.username
      выполнил
      = @eventlog.action
      в
      = @eventlog.model
  .widget-body
    %p
      = @eventlog.message.html_safe
