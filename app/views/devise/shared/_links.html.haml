.innerT.center
  - if controller_name != 'sessions'
    = link_to new_session_path(resource_name), :class => 'btn btn-icon-stacked btn-block btn-success glyphicons user_add' do
      %i
      %span Уже зарегистрированы?
      %span.strong Войти
    %p.innerT

  -# if devise_mapping.registerable? && controller_name != 'registrations'
  -#  = link_to new_registration_path(resource_name), :class => 'btn btn-icon-stacked btn-block btn-success glyphicons user_add' do
  -#     %i
  -#     %span Нет аккаунта?
  -#     %span.strong Зарегистрироваться
  -#   %p.innerT

  - if devise_mapping.recoverable? && controller_name != 'passwords'
    = link_to new_password_path(resource_name), :class => 'btn btn-icon-stacked btn-block btn-success' do
      %span Забыли пароль?
      %span.strong Напомнить
    %p.innerT

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to new_confirmation_path(resource_name), :class => 'btn btn-icon-stacked btn-block btn-success' do
      %span Не получили письма подтверждения?
      %span.strong Повторить
    %p.innerT

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = link_to new_unlock_path(resource_name), :class => 'btn btn-icon-stacked btn-block btn-success' do
      %span Не получили письма разблокировки?
      %span.strong Повторить
    %p.innerT

  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to omniauth_authorize_path(resource_name, provider), :class => 'btn btn-icon-stacked btn-block btn-facebook glyphicons facebook' do
        %i
        %span Войти с
        %span.strong provider.to_s.titleize
      %p.innerT
  %p
    Есть проблемы?
    = mail_to 'asvechkar@freshintel.ru', 'Получить помощь'