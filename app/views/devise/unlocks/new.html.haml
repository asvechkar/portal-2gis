#login
  .container
    .wrapper
      %h1.glyphicons.lock
        = image_tag '2gis_logo.png', :alt => 'Портал 2GIS'
        %i
      .widget.widget-heading-simple.widget-body-gray
        .widget-head
          %h3.heading Переслать письмо разблокировки
        .widget-body
          = form_for resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, :autocomplete => 'off' } do |f|
            = devise_error_messages!
            = f.label false, 'Адрес эл.почты'
            = f.email_field :email, :autofocus => true, :class => 'input-block-level', :placeholder => 'Адрес эл.почты'
            .separator.bottom
              .row-fluid
                .span12.center
                  = f.submit 'Отправить письмо разблокировки', :class => 'btn btn-block btn-inverse'

      = render 'devise/shared/links'
