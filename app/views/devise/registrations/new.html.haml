.widget.widget-heading-simple
  .widget-head
    %h3.heading Регистрация
    .pull-right
      уже зарегистрированы?
      = link_to 'Войти', new_session_path(resource_name), :class => 'btn btn-inverse btn-mini'
  .widget-body
    = form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :autocomplete => 'off' } do |f|
      = devise_error_messages!
      .row-fluid.row-merge
        .span6
          .innerR
            = f.label false, 'Имя пользователя', :class => 'strong'
            = f.text_field :username, :autofocus => true, :class => 'input-block-level', :placeholder => 'Имя пользователя'
            = f.label false, 'Пароль', :class => 'strong'
            = f.password_field :password, :class => 'input-block-level', :placeholder => 'Ваш пароль'
            = f.label false, 'Пароль еще раз', :class => 'strong'
            = f.password_field :password_confirmation, :class => 'input-block-level', :placeholder => 'Пароль еще раз'
        .span6
          .innerL
            = f.label false, 'Эл.почта', :class => 'strong'
            = f.email_field :email, :class => 'input-block-level', :placeholder => 'Ваш адрес эл.почты'
            = f.submit 'Регистрация', :class => 'btn btn-icon-stacked btn-block btn-success glyphicons user_add'
            %p
              Есть проблемы?
              = link_to 'Получить помощь', 'http://freshintel.ru'
= render 'devise/shared/links'